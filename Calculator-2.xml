<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/FirstTextViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="right"
        android:textColor="@color/white"


        />
    <TextView
        android:id="@+id/SecondTextViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:textSize="45dp"
        android:textStyle="bold"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/black"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">


        <Button
            android:id="@+id/PercentButtonID"
            android:onClick="PercentFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/CEButtonID"
            android:onClick="CEFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/CButtonID"
            android:onClick="ClearFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/DButtonID"
            android:onClick="DFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="D"
            android:textSize="30dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">


        <Button
            android:id="@+id/SevenButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp"/>


        <Button
            android:id="@+id/EightButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/NineButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/PlusButtonID"
            android:onClick="OperatorFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">


        <Button
            android:id="@+id/FourButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/FiveButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/SixButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30dp"/>


        <Button
            android:id="@+id/MinusButtonID"
            android:onClick="OperatorFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">


        <Button
            android:id="@+id/OneButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/TwoButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/ThreeButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/multiplyButtonID"
            android:onClick="OperatorFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="30dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">


        <Button
            android:id="@+id/RusultButtonID"
            android:onClick="ResultFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/ZeroButtonID"
            android:onClick="DigitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/PointButtonID"
            android:onClick="PointFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="30dp"

            tools:ignore="OnClick" />

        <Button
            android:id="@+id/DivisionButtonID"
            android:onClick="OperatorFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30dp"

            />

    </LinearLayout>

</LinearLayout>
